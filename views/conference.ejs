        <!-- main -->
        <header id="blog_header" class="header header_m text-light">
            <p> همایش . . .</p>
            <%- include("partials/divider.ejs") %>
        </header>
        <section id="Conferance" class="section conferance conferance_section">
            <img src="/public/img/conference/main.jpg" alt="Conferance picture">
        </section>
        <section class="conferance_top section">
            <div class="container main_container conferance_container">
                <h1>یونی تاک برگزار میکند</h1>
