          </div>
          <a href=""
            ><button class="btn mt-5 bg-dark text-white">مشاهده همه</button></a
          >
        </div>
      </section>
      <hr>
      <section id="H_section-2" class="activities H_section">
        <div class="container main_container">
          <h2 class="section_title">فعالیت های انجمن</h2>
          <hr />
          <div class="activity_audio">
            <video src="/public/video/9Wy6Pwjm0WNSM_2u.mp4" controls style="border-radius: 10px; height: 500px;"></video>
          </div>
      </section>
      <hr>
    </div>
    <!-- footer -->
    <%- include("footer.ejs") %>
  </body>
</html>
